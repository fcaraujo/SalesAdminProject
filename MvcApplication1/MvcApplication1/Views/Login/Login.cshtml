@model MvcApplication1.Models.UserViewModel

@{
    ViewBag.Title = "Login";
}

<div class="page-header">
    <h1>Welcome</h1>
</div>

<div class="well">
    <p>
        After a successfully login, you will search customer information.
        <br />
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur at dictum mi.
        Aliquam accumsan cursus leo, et tempus lorem ultrices ut. Praesent in lorem vel ipsum
         auctor ultricies ac eu augue. Suspendisse imperdiet sagittis nisl nec finibus. Cras
         iaculis, est ac luctus sollicitudin, dolor arcu porttitor ex, sit amet molestie urna
         elit eget libero. Donec dictum est id velit imperdiet, eget pharetra erat tempor.
    </p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="loginPanelContainer" class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Login Form</h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-3" })

                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Email, new { autofocus = "autofocus", id = "loginName", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })

                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                @if (ViewData["authErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @ViewData["authErrorMessage"]
                    </div>
                }

                <div class="form-group text-right">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}